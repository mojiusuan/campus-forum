# 环境
NODE_ENV=development
PORT=3000

# 数据库（待配置）
DATABASE_URL=postgresql://forum_user:password@localhost:5432/forum

# 数据库连接池配置（生产环境建议：max=50, min=10）
DB_POOL_MAX=20
DB_POOL_MIN=5

# JWT密钥（请生成随机字符串）
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# 日志级别
LOG_LEVEL=info

# Redis配置（可选，用于缓存）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# PM2实例数（集群模式，'max'表示使用所有CPU核心）
# PM2_INSTANCES=max
